#include <iostream>
#define TAMANHO 10
using namespace std;

void iniciaLista (int *t){
     *t = 0;
}

void inserir(int v[], int *n, int e){
	if (*n == TAMANHO){
		cout << "\nERRO: Lista cheia.";
	}else{
		v[*n] = e;
		(*n)++;
	}
	return;
}

void percorrer(int v[], int n){
	for (int i = 0; i < n; i++){
		cout <<  v[i] << " ";
    }
	cout << "\n\n";
}

int buscarSequencial(int v[], int n, int valor){
	for (int i = 0; i < n; i++){
		if (v[i] == valor) return i;
	}
	return -1;
}

void remover(int v[], int *n, int e){
	int pos;
	if (*n == 0){
		cout << "\nERRO : Lista vazia. \n";
		return; // return; sai da função sem retornar valor algum
	}
	pos = buscarSequencial(v,*n,e);
	if (pos == -1){
		cout << "\nERRO : Valor não encontrado. \n";
		return;
	}
	(*n)--;
	v[pos] = v[*n];
}

// Prog. Principal
int main(){
	int v[TAMANHO], tam, i, temp, op;
    iniciaLista (&tam);
    cout << "Informe o tam da entrada inicial: ";
    cin >> op;
	for (i = 0; i < op; i++){
		cout << "Digite um numero: ";
		cin >> temp;
		inserir(v, &tam, temp);
	}
    do {
        cout << "\n1 - Incluir";
        cout << "\n2 - Exibir";
        cout << "\n3 - Buscar";
        cout << "\n4 - Excluir";
        cout << "\n5 - Sair";
        cout << "\n\nDigite sua opcao: ";
        cin >> op;
        switch (op){
            case 1: cout << "Digite um numero: ";
 		            cin >> temp;
                    inserir(v, &tam, temp);
                    break;
            case 2: percorrer(v, tam);
                    break;
            case 3: cout << "\nDigite um numero pra procurar: ";
	                cin >> temp;
	                i = buscarSequencial(v,tam,temp);
	                if (i == (-1)){
	                	cout << "\nNao achei " << temp << "...\n";
	                }else{
	                	cout << "\nAchei " << temp << " na posicao " << i << "...\n";
	                }
                    break;
            case 4: cout << "\nDigite um numero pra excluir: ";
	                cin >> temp;
                    remover(v, &tam, temp);
	                percorrer(v,tam);
                    break;
            case 5: break;
            default: cout << "Opcao invalida . . .\n\n";
           		     break;
        }
    } while (op != 5);
	return 0;
}
